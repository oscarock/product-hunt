<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Listado de Productos</h1>
      <br>
      <div class="text-left">
        <%= link_to "Publicar Producto", new_product_path, class: "btn btn-primary" %>
      </div>
      <br>
      <table class="table table-hover">
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Url</th>
          <th>Descripcion</th>
        </tr>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.url %></td>
            <td><%= product.description %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
