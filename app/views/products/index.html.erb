<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Listado de Productos</h1>
      <br>

      <% if signed_in? %>
      <div class="text-left">
        <%= link_to "Publicar Producto", new_product_path, class: "btn btn-primary" %>
      </div>
      <% end %>

      <br>
      <table class="table table-hover">
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Url</th>
          <th>Descripcion</th>
          <th>Acciones</th>
        </tr>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= link_to product.name, product_path(product) %></td>
            <td><%= product.url %></td>
            <td><%= product.description %></td>
            <td>
              <% if signed_in? %>
                <%= link_to "Editar", edit_product_path(product), class: "btn btn-info" %>
                <%= link_to "Eliminar", product, method: :delete, data: {confirm: "Â¿ Estas Seguro de eliminar el prpoducto #{product.name} ?"}, class: "btn btn-danger" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
